{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build wasm",
            "type": "shell",
            "command": "em++ -gsource-map --source-map-base http://127.0.0.1:5500/wasm/dist/ -O2 -o ./wasm/dist/main.wasm ./wasm/src/main.cpp",
            "problemMatcher":"$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug build wasm (large memory)",
            "type": "shell",
            "command": "em++ -s TOTAL_MEMORY=67108864 -gsource-map --source-map-base http://127.0.0.1:5500/wasm/dist/ -O2 -o ./wasm/dist/main.wasm ./wasm/src/main.cpp",
            "problemMatcher":"$gcc"
        },
        {
            "label": "release build wasm",
            "type": "shell",
            "command": "em++ -g0 -O3 -o ./dist/main.wasm ./wasm/src/main.cpp",
            "problemMatcher": []
        }
    ]
}